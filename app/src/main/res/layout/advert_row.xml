<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAdverts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="69dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewAdvertsId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/txtViewAdvertsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/txtViewAdvertsId"/>

            <TextView
                android:id="@+id/txtViewAdvertsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/txtViewAdvertsTitle"/>

            <TextView
                android:id="@+id/txtViewAdvertsMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/txtViewAdvertsAuthor"
                android:layout_below="@+id/txtViewAdvertsTitle"/>

            <TextView
                android:id="@+id/txtViewAdvertsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/txtViewAdvertsMail"/>

            <TextView
                android:id="@+id/txtViewAdvertsPublishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/txtViewAdvertsMail"
                android:layout_toEndOf="@+id/txtViewAdvertsPrice"/>

            <TextView
                android:id="@+id/txtViewAdvertsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/txtViewAdvertsPublishedAt"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>